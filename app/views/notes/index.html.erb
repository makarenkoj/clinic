<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-center mb-2 p-3">
  <%= link_to t('view.notes.new'), new_note_path, class: 'btn btn-info' %>
</div>
<%# ToDo: Fix background %>
<div class="d-flex justify-content-center mb-2 p-3">
  <%= link_to(order_by(:desc), class: 'bi bi-sort-down') do %>
    <%= image_tag 'sort-up-alt.svg', class: 'bi bi-sort-down', alt: 'Sort Down' %>
  <% end %>

  <%= link_to(order_by(:asc), class: 'bi bi-sort-down') do %>
    <%= image_tag 'sort-down.svg', class: 'bi bi-sort-down', alt: 'Sort Down' %>
  <% end %>
</div>

<table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('view.notes.id')%></th>
        <th scope="col"><%= t('view.notes.date')%></th>
        <th scope="col"><%= t('view.notes.body')%></th>
      </tr>
    </thead>
    <tbody>
      <% @notes.each_with_index do |note, i| %>
      <tr>
        <th scope="row"><%= link_to note.id, note, class: "btn justify-content-start mb-6" %></th>
        <td><%= link_to note.date_time.strftime('%H:%M %d-%m-%Y'), note, class: "btn justify-content-start mb-6" %></td>
        <td><%= link_to note.body.first(25), note, class: "btn justify-content-start mb-6" %></td>
      </tr>
      <% end %>

    </tbody>
</table>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <%= paginate @notes %>
  </ul>
</nav>

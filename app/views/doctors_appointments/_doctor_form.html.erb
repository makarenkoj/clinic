<%= simple_form_for @appointment, html: {multipart: true}, wrapper: :vertical_multi_select do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @appointment} %>

  <div class="form-group">
    <%= f.input :description, as: :text,
                              label: t('view.appointments.description'),
                              input_html: {rows: 23, cols: 150 } %>
  </div>
  <div class="actions">
    <%= f.button :submit, t('activerecord.attributes.appointment.save'), class: 'btn btn-primary' %>
    <%= t('activerecord.attributes.appointment.or') %>
    <%= link_to t('activerecord.attributes.appointment.back'), :back, class: 'btn btn-primary' %>
  </div>
<% end %>

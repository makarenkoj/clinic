<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to current_user.email, current_user, class: "nav-link, btn btn-dark" %>
/
  <%= link_to t('activerecord.attributes.user.sign_out'), destroy_user_session_path, method: :delete, class: "nav-link, btn btn-dark" %>
<% else %>
  <%= link_to t('activerecord.attributes.user.sign_in'), new_user_session_path, class: "nav-link, btn btn-dark" %>
/
  <%= link_to t('activerecord.attributes.user.sign_up'), new_user_registration_path, class: "nav-link, btn btn-dark" %>
<% end %>
